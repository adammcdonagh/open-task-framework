{
  "type": "transfer",
  "source": {
    "hostname": "192.168.1.5",
    "directory": "/tmp",
    "fileRegex": ".*\\.log",
    "conditionals": {
      "size": {
        "gt": 1,
        "lt": 1000
      },
      "age": {
        "gt": 1,
        "lt": 600
      }
    },
    "protocol": {
      "name": "ssh",
      "credentials": {
        "username": "adam",
        "password": "inzipped"
      }
    }
  },
  "destination": {
    "hostname": "192.168.1.5",
    "directory": "/tmp/dest",
    "rename": {
      "pattern": "(.*).log",
      "sub": "\\1.txt"
    },
    "permissions": {
      "owner": "adam",
      "group": "dialout"
    },
    "mode": "0644",
    "transferType": "push",
    "protocol": {
      "name": "ssh",
      "credentials": {
        "username": "adam",
        "password": "inzipped",
        "transferUsername": "adam"
      }
    },
    "postCopyActions": {
      "action": "delete"
    }
  }
}