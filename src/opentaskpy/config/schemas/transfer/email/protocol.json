{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "http://localhost/transfer/email/protocol.json",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "enum": ["email"]
    },
    "smtp_port": {
      "type": "number",
      "minimum": 1,
      "maximum": 65535,
      "default": 25
    },
    "smtp_server": {
      "type": "string"
    },
    "start_tls": {
      "type": "boolean",
      "default": true
    },
    "sender": {
      "type": "string",
      "pattern": "^(.*?\\s+<)?[\\w.-]+@[\\w.-]+\\.[a-zA-Z]{2,6}(>?)$"
    },
    "credentials": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      },
      "required": ["username", "password"],
      "additionalProperties": false
    }
  },
  "required": ["name", "smtp_server", "sender"],
  "additionalProperties": false
}
